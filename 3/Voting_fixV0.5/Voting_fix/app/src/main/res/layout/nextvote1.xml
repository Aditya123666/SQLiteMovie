<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back11"
    >
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="No.2"
        android:layout_marginLeft="160dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/hitam"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_marginLeft="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/qori1"
        android:text="Hello World!" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:background="@color/putih"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        >
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" VISI"
                android:textColor="@color/hitam"
                />
            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:textSize="13dp"
                android:layout_marginLeft="2dp"
                android:textAlignment="center"
                android:text="Menjadikan Teknik Informatika UIN Bandung sebagai batu penjuru yang aktif mengembangkan diri dalam segi akademik maupun non-akademik agar tercipta mahasiswa yang kompeten di bidangnya dan berakhlak mulia"
                android:textColor="@color/hitam"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="4dp"
            android:layout_height="180dp"
            android:background="@color/hitam"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="4.5"
            >
            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" MISI"
                android:textColor="@color/hitam"
                />
            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="1.Menciptakan wadah terbaik sebagai ranah penyaluran potensi mahasiswa dalam pencapaian prestasi baik lingkup internal dan eksternal"
                android:textColor="@color/hitam"
                />
            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="2.Menyeimbangkan penyelenggaraan kegiatan akademik dan non-akademik dalam lingkup TI"
                android:textColor="@color/hitam"
                />


        </LinearLayout>
    </LinearLayout>
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:id="@+id/btnvote"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inpass"
        android:backgroundTint="@color/birulangit"
        android:hint="VOTE"
        android:textColorHint="#000000" />
</LinearLayout>