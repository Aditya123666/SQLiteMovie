<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back11">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calon ketua Himatif "
        android:textSize="30dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/hitam"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Periode 2017/2018"
        android:textSize="30dp"
        android:layout_marginLeft="55dp"
        android:textColor="@color/hitam"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.1"
            android:layout_marginLeft="45dp"
            android:textSize="40dp"
            android:textColor="@color/hitam"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.2"
            android:textSize="40dp"
            android:layout_marginLeft="125dp"
            android:textColor="@color/hitam"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/birulangit"
        >

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="5"
            android:id="@+id/imageButton"
            android:src="@drawable/pimen0"
            android:layout_marginLeft="10dp"
            android:background="@color/hitam"/>
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="5"
            android:id="@+id/imageButton1"
            android:src="@drawable/qori0"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/hitam"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="20dp"
            android:text="Pirman Abdurohman "
            android:textSize="15dp"
            android:textColor="@color/hitam"
            />
        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:text="Qoriah Indah Susilowati"
            android:textColor="@color/hitam"
            />

    </LinearLayout>
</LinearLayout>
