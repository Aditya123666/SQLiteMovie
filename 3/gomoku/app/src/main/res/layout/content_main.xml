<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="NewGame"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/btnPlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_dark"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/namamain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Turn of:"

                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Click NewGame to play"
                android:textSize="10sp"
                android:textStyle="bold"
                android:id="@+id/tvTurn" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linBoardGame"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/linMenu"
        android:background="@android:color/holo_purple"
        android:orientation="vertical">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linBoardGame"
        >
        <Button

            android:id="@+id/hasil"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:background="@drawable/oval"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="HASIL"
            android:layout_height="50dp" />

    </LinearLayout>

</RelativeLayout>